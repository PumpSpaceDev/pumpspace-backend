{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/shared": [
        "libs/shared/src"
      ],
      "@app/shared/*": [
        "libs/shared/src/*"
      ],
      "@app/shared/entities": [
        "libs/shared/entities"
      ],
      "@app/interfaces": [
        "libs/interfaces/src"
      ],
      "@app/interfaces/*": [
        "libs/interfaces/src/*"
      ],
      "@app/config": [
        "libs/config/src"
      ],
      "@app/config/*": [
        "libs/config/src/*"
      ],
      "@app/shared-swaps": [
        "libs/shared-swaps/src"
      ],
      "@app/shared-swaps/*": [
        "libs/shared-swaps/src/*"
      ],
      "@pumpspace/data-collector": [
        "apps/data-collector/src"
      ],
      "@pumpspace/data-collector/*": [
        "apps/data-collector/src/*"
      ],
      "@app/signal-recorder": [
        "apps/signal-recorder/src"
      ],
      "@app/signal-recorder/*": [
        "apps/signal-recorder/src/*"
      ],
      "@app/signal-analyzer": [
        "apps/signal-analyzer/src"
      ],
      "@app/signal-analyzer/*": [
        "apps/signal-analyzer/src/*"
      ],
      "@app/shared/repositories": [
        "libs/shared/src/repositories"
      ]
    }
  }
}
